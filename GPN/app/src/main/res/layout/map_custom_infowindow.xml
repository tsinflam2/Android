<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ADF"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/station_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/marker_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="User01"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/marker_news_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marker_user_name"
            android:layout_marginLeft="5dp"
            android:text="News Title"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/marker_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marker_news_title_tv"
            android:layout_marginLeft="5dp"
            android:text="NewsTitle(Real data)"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/marker_news_icon"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_below="@+id/marker_news_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


</LinearLayout>